{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "apps/nest.js/src",
	"compilerOptions": {
		"deleteOutDir": true,
		"webpack": true,
		"tsConfigPath": "apps/nest.js/tsconfig.app.json"
	},
	"monorepo": true,
	"root": "apps/nest.js",
	"projects": {
		"basic-crud-service": {
			"type": "application",
			"root": "apps/basic-crud-service",
			"entryFile": "main",
			"sourceRoot": "apps/basic-crud-service/src",
			"compilerOptions": {
				"tsConfigPath": "apps/basic-crud-service/tsconfig.app.json"
			}
		}
	}
}
